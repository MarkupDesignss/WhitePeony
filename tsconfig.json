{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@store/*": ["store/*"],
      "@slices/*": ["store/slices/*"],
      "@hooks/*": ["hooks/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods", "babel.config.js", "metro.config.js"]
}
